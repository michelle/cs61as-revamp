<!-- TODO: Switch between lessons other than currentLesson on dashboard. Check completedness of each section for class="completed" li elements. -->
<div id="dash">
  <div id="lesson" class="noselect">
    <h2><strong><%-currentLesson.number%> - </strong> <%-currentLesson.name%></h2>
  </div>
  <div id="selection" class="right">
    <!--form id="lessonselect" method="post" action="/dashboard/switch">
      <input type="number" min="1" max=<%-currentUser.progress%> value="1" name="number" class="num">
      <button class="small"><span class="iconic arrow-right-alt"></span></button>
    </form-->
    <a href="/lessons">all available lessons <span class="iconic arrow-right-alt"></span></a>
  </div>
  <div id="lefttriangle"></div>
  
  <div class="clear"></div>
  <% var n = currentLesson.number; %>
  <div class="thirds left">
    <h1>Learn</h1>
    <ul class="nolist">
          <% if (currentLesson.videos.length > 0) { %>
            <a href="/webcast"><li class="incomplete">Webcast</li></a>
          <% } %>
          
          <% if (currentLesson.readings.length > 0) { %>
              <% for (var k = 0; k < currentLesson.readings.length; k += 1) { var reading = currentLesson.readings[k]; %>
                <a href="/reading/<%-n%>/<%-k%>"><li class="incomplete"><%-reading.name%></li></a>
              <% } %>
          <% } %>
          
    </ul>
  </div>
  <div class="thirds left">
    <h1>Practice</h1>
      <ul class="nolist">
          <% if (currentLesson.assignments.length > 0) { %>
              <% if (currentLesson.homework) { %>
                <a href="/homework/<%-n%>"><li class="incomplete">Homework</li></a>
              <% } %>
              <% if (currentLesson.project) { %>
                <a href="/project/<%-n%>"><li class="incomplete">Project</li></a>
              <% } %>
          <% } else { %>
            <div class="note"> 
              <div class="padding">
                Looks like there's no assignments for this lesson.
              </div>
            </div>
          <% } %>
          
    </ul>
  </div>
  <div class="thirds left">
    <h1>Master</h1>
    <ul class="nolist">
          <% if (currentLesson.extra.length > 0) { %>
              <% for (var l = 0; l < currentLesson.extra.length; l += 1) { var extra = currentLesson.extra[l]; %>
                <a href="/extra/<%-n%>/<%-j%>"><li class="incomplete"><%-extra.name%></li></a>
              <% } %>
          <% } else { %>
            <div class="note"> 
              <div class="padding">
                Looks like there's no extras for this lesson.
              </div>
            </div>
          <% } %>
  
    </ul>
  </div>

</div>

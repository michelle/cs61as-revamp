<div id="centered">
  <div class="yellownote">
    <div class="padding">
      <strong>Warning: </strong>Think twice before you click save.
    </div>
  </div>
  <div id="lesson" class="noselect">
    <h2>Manage project</h2>
  </div>
  <div id="lefttriangle"></div>
  <br>
  <div class="contentpadding">
    <form method="post" action="/admin/projects/add">
      <div class="formbox">
        <h3>Add a new project</h3>
        <span class="left boxy noselect" required>name</span>
        <input type="text" class="right textboxy" name='project[name]' required >
        <br/>
        <span class="left boxy noselect" required>project lesson number</span>
        <input type="number" min="0" class="right textboxy" name='project[projectLessonNumber]' required >
        <div class="clear"></div>
      </div>
      <button class="anotherbutton" id="submitProject">
        Save
      </button>
    </form>
    <br>
    <br>
    <div class="formbox">
      <h3>Edit a project (<%-projects.length %> total)</h3>
      <% for (var i = 0; i < projects.length; i += 1) { var project = projects[i];%>
      <span class="left boxy noselect displaymargin">name: <%-project.name%></span>
      <span class="right linkboxy displaymargin">
        <a href="/admin/projects/edit/<%-project.id%>">(edit)</a>
        <a href="/admin/projects/delete/<%-project.id%>">(delete)</a>
      </span>
      <% } %> <div class="clear"></div>
    </div>
  </div>
</div>
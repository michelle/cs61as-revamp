<div id="centered">
  <div class="yellownote">
    <div class="padding">
      <strong>Warning: </strong>Think twice before you click save.
    </div>
  </div>
  <div id="lesson" class="noselect">
    <h2>Editing unit with ID: <strong><%-unit.id%></strong></h2>
  </div>
  <div id="lefttriangle"></div>
  <br>
  <div class="contentpadding">
    <form method="post" action="/admin/units/edit/<%-unit.id%>">
      <div class="formbox">
        <h3>Edit a  unit</h3>
        <span class="left boxy noselect" required>number</span>
        <input type="number" class="right textboxy" name='unit[number]' min='0' max='5' value="<%-unit.number%>" required >
        <br>
        <span class="left boxy noselect" required>name</span>
        <input type="text" class="right textboxy" name='unit[name]' value="<%-unit.name%>" required >
        <br>
        <span class="left boxy selecttextboxy noselect">projects</span>
        <select class="right manyselectboxy" name='unit[projects]' multiple="multiple">
          <option value="undefined">-- No Project --</option>
          <% console.log(unit.projects) %>
          <% for (var i = 0; i < projects.length; i += 1) { var project = projects[i] ;%>
            <% console.log(project) %>
            <% if (unit.projects && unit.projects.indexOf(project.id) != -1) { %>
              <option value="<%-project.id%>" selected="selected"><%-project.name%></option>
            <% } else { %>
              <option value="<%-project.id%>"><%-project.name%></option>
            <% } %>
          <% } %>
        </select>
        <div class="clear"></div>
      </div>
      <button class="anotherbutton" id="submitUnit">
        Save
      </button>
    </form>
  </div>
</div>
<div id="centered">
  <div class="yellownote">
    <div class="padding">
      <strong>Warning: </strong>Think twice before you click save.
      This is dangerous, and it has the potential to break the DB (no security yet).
    </div>
  </div>
  <div id="lesson" class="noselect">
    <h2>Editing lesson with ID: <strong><%-lesson.id%></strong></h2>
  </div>
  <div id="lefttriangle"></div>
  <br>
  <div class="contentpadding">
    <form method="post" action="/admin/lessons/edit/<%-lesson.number%>">
      <div class="formbox">
        <h3>Add a new Lesson</h3>
        <span class="left boxy noselect" required>number</span>
        <input type="number" class="right textboxy" name='lesson[number]' value='<%-lesson.number%>' required >
        <br>
        <span class="left boxy noselect" required>name</span>
        <input type="text" class="right textboxy" name='lesson[name]' value='<%-lesson.name%>' required >
        <br>
        <span class="left boxy noselect">homework</span>
        <select class="right selectboxy" name='lesson[homework]'>
          <% for (var i = 0; i < homeworks.length; i += 1) { var homework = homeworks[i] ;%>
            <% if (lesson.homework && lesson.homework.id == homework.id) { %>
              <option value="<%-homework.id%>" selected="selected"><%-homework.name%></option>
            <% } else { %>
              <option value="<%-homework.id%>"><%-homework.name%></option>
            <% } %>
          <% } %>
        </select>
        <br>
        <span class="left boxy noselect">project</span>
        <select class="right selectboxy" name='lesson[project]'>
          <% for (var i = 0; i < projects.length; i += 1) { var project = projects[i] ;%>
            <% if (lesson.project && lesson.project.id == project.id) { %>
              <option value="<%-project.id%>" selected="selected"><%-project.name%></option>
            <% } else { %>
              <option value="<%-project.id%>"><%-project.name%></option>
            <% } %>
          <% } %>
        </select>
        <br>
        <span class="left boxy noselect">extra</span>
        <select class="right selectboxy" name='lesson[extra]' multiple="multiple">
          <% for (var i = 0; i < extras.length; i += 1) { var extra = extras[i] ;%>
            <% if (lesson.extra && lesson.extra.id == extra.id) { %>
              <option value="<%-extra.id%>" selected="selected"><%-extra.name%></option>
            <% } else { %>
              <option value="<%-extra.id%>"><%-extra.name%></option>
            <% } %>
          <% } %>
        </select>
        <br>
        <span class="left boxy noselect">videos</span>
        <select class="right selectboxy" name='lesson[reading]' multiple="multiple">
          <% for (var i = 0; i < videos.length; i += 1) { var video = videos[i] ;%>
            <% if (lesson.video && lesson.video.id == video.id) { %>
              <option value="<%-video.id%>" selected="selected"><%-video.name%></option>
            <% } else { %>
              <option value="<%-video.id%>"><%-video.name%></option>
            <% } %>
          <% } %>
        </select>
        <br>
        <span class="left boxy noselect">readings</span>
        <select class="right selectboxy" name='lesson[reading]' multiple="multiple">
          <% for (var i = 0; i < readings.length; i += 1) { var reading = readings[i] ;%>
            <% if (lesson.reading && lesson.reading.id == reading.id) { %>
              <option value="<%-reading.id%>" selected="selected"><%-reading.name%></option>
            <% } else { %>
              <option value="<%-reading.id%>"><%-reading.name%></option>
            <% } %>
          <% } %>
        </select>
        <div class="clear"></div>
      </div>
      <button class="anotherbutton" id="submitLesson">
        Save
      </button>
    </form>
  </div>
</div>
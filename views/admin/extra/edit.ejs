<div id="centered">
  <div class="yellownote">
    <div class="padding">
      <strong>Warning: </strong>Think twice before you click save.
    </div>
  </div>
  <div id="lesson" class="noselect">
    <h2>Editing extra with ID: <strong><%-extra.id%></strong></h2>
  </div>
  <div id="lefttriangle"></div>
  <br>
  <div class="contentpadding">
    <form method="post" action="/admin/extra/edit/<%-extra.id%>">
      <div class="formbox">
        <h3>Add a new extra</h3>
        <span class="left boxy noselect" required>name</span>
        <input type="text" class="right textboxy" name='extra[name]' value="<%-extra.name%>" required >
        <div class="clear"></div>
      </div>
      <button class="anotherbutton" id="submitExtra">
        Save
      </button>
    </form>
  </div>
</div>
<div id="centered">
  <div class="yellownote">
    <div class="padding">
      <strong>Warning: </strong>Think twice before you click save.
    </div>
  </div>
  <div id="lesson" class="noselect">
    <h2>Manage extra</h2>
  </div>
  <div id="lefttriangle"></div>
  <br>
  <div class="contentpadding">
    <form method="post" action="/admin/extra/add">
      <div class="formbox">
        <h3>Add a new extra</h3>
        <span class="left boxy noselect" required>name</span>
        <input type="text" class="right textboxy" name='extra[name]' required >
        <div class="clear"></div>
      </div>
      <button class="anotherbutton" id="submitExtra">
        Save
      </button>
    </form>
    <br>
    <br>
    <div class="formbox">
      <h3>Edit a extra (<%-extras.length %> total)</h3>
      <% for (var i = 0; i < extras.length; i += 1) { var extra = extras[i];%>
      <span class="left boxy noselect displaymargin">name: <%-extra.name%></span>
      <span class="right linkboxy displaymargin">
        <a href="/admin/extra/edit/<%-extra.id%>">(edit)</a>
        <a href="/admin/extra/delete/<%-extra.id%>">(delete)</a>
      </span>
      <% } %> <div class="clear"></div>
    </div>
  </div>
</div>
<div id="centered">
  <div class="yellownote">
    <div class="padding">
      <strong>Warning: </strong>Think twice before you click save.
      This is dangerous, and it has the potential to break the DB (no security yet).
    </div>
  </div>
  <div id="lesson" class="noselect">
    <h2>Manage Homework</h2>
  </div>
  <div id="lefttriangle"></div>
  <br>
  <div class="contentpadding">
    <form method="post" action="/admin/homework/add">
      <div class="formbox">
        <h3>Add a new Homework</h3>
        <span class="left boxy noselect" required>name</span>
        <input type="text" class="right textboxy" name='homework[name]' required >
        <div class="clear"></div>
      </div>
      <button class="anotherbutton" id="submitHomework">
        Save
      </button>
    </form>
    <br>
    <br>
    <div class="formbox">
      <h3>Edit a homework (<%-homeworks.length %> total)</h3>
      <% for (var i = 0; i < homework.length; i += 1) { var homework = homeworks[i];%>
      <span class="left boxy noselect displaymargin">name: <%-homework.name%></span>
      <span class="right linkboxy displaymargin">
        <a href="/admin/homework/edit/<%-homework.id%>">(edit)</a>
        <a href="/admin/homework/delete/<%-homework.id%>">(delete)</a>
      </span>
      <% } %> <div class="clear"></div>
    </div>
  </div>
</div>
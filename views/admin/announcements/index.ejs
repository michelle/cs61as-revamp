<div id="centered">
  <div class="yellownote">
    <div class="padding">
      <strong>Warning: </strong>Think twice before you click save.
    </div>
  </div>
  <div id="lesson" class="noselect">
    <h2>Manage Announcements</h2>
  </div>
  <div id="lefttriangle"></div>
  <br>
  <div class="contentpadding">
    <form method="post" action="/admin/announcements/new">
      <div class="formbox">
        <h3>Add a new Announcement</h3>
        <span class="left boxy noselect" required>title</span>
        <input type="text" class="right textboxy" name='announcement[title]' required>
        <br>
        <span class="left bigboxy noselect">body (required)</span>
        <textarea class="right bigtextboxy" name='announcement[content]' required></textarea>
        <div class="clear"></div>
      </div>
      <button class="anotherbutton" id="submitAnnouncement">
        Save
      </button>
    </form>
    <br>
    <br>
    <div class="formbox">
      <h3>Edit an announcement (<%-news.length %> total)</h3>
      <% for (var i = 0; i < news.length; i += 1) { var article = news[i];%>
        <span class="left boxy noselect displaymargin">title: <%-article.title%></span>
        <span class="right linkboxy displaymargin">
          <a href="/admin/announcements/edit/<%-article.id%>">(edit)</a>
          <a href="/admin/announcements/delete/<%-article.id%>">(delete)</a>
        </span>
      <% } %> <div class="clear"></div>
    </div>
  </div>
</div>